{
  "name": "vitest",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "preinstall": "npx only-allow bun",
    "prepare": "lefthook install",
    "build": "turbo run build",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check",
    "lint": "oxlint",
    "lint-types": "oxlint --type-aware",
    "check": "oxfmt && oxlint --type-aware",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:projects": "vitest run",
    "test:projects:watch": "vitest --watch",
    "view-report": "turbo run view-report"
  },
  "devDependencies": {
    "@repo/vitest-config": "*",
    "lefthook": "^2.0.12",
    "oxfmt": "^0.20.0",
    "oxlint": "^1.35.0",
    "oxlint-tsgolint": "^0.10.0",
    "turbo": "^2.7.2",
    "typescript": "5.7.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.5"
}
